<head>
    @Scripts.Render("~/Content/js/Tools.js")
    @Scripts.Render("~/Content/js/Core.js")
    
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>欢迎登录</title>
    <link href="/Content/css/main.css" rel="stylesheet" type="text/css"/>
    <script language="JavaScript" src="/Content/js/jquery-1.4.4.min.js"></script>
    <script src="/Content/js/cloud.js" type="text/javascript"></script>
    <script src="~/Content/js/Home/Login.js"></script>
